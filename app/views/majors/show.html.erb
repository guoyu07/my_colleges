<% if @major.present? %>
<fieldset>
  <legend>基本信息</legend>
  <table class="table table-hover">
    <tbody>
      <tr class="success">
        <td>专业层次</td>
        <td><%= @major.college_type %></td>
      </tr>
      <tr class="success">
        <td>专业分类</td>
        <td><%= @major.parent_name %></td>
      </tr>
      <tr class="error">
        <td>专业名称</td>
        <td><%= @major.name %></td>
      </tr>
      <tr class="error">
        <td>专业代号</td>
        <td><%= @major.code %></td>
      </tr>
    </tbody>
  </table>
</fieldset>


<fieldset>
    <legend>文字介绍</legend>
    <p>
    <% if @major.major_introduction %>
      <%= @major.major_introduction.content %>
    <% else %>
      无
    <% end %></p>
</fieldset>


<% end %>