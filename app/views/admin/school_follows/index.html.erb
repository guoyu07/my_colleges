<h1>学校关注列表</h1>

<% if has_size?(@school_follows) %>

  <%= chinese_pagination @school_follows %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>省份</th>
        <th>学校名称</th>
        <th>关注设备号</th>
        <th>关注日期</th>
      </tr>
    </thead>
    <tbody>
      <% @school_follows.each do |school_follow| %>
        <% school = school_follow.school %>
        <tr>
          <td><%= school.id %></td>
          <td><%= school.province_name %></td>
          <td><%= school.real_name %></td>
          <td><%= school_follow.device_id %></td>
          <td><%= school_follow.the_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= chinese_pagination @school_follows %>
<% end %>